@model IEnumerable<FabrikamFiber.DAL.Models.Employee>

@{
    ViewBag.Title = "Employees";
}

<h1>@ViewBag.Title</h1>

<p>
    @Html.ActionLink("Create New", "Create", "Employees", null, new { @class = "glossyBox createNew" })
</p>
<table class="dataTable">
    <tr>
        <th>Actions</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Address</th>
        <th>Phone</th>
        <th>Service Areas</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
        <td>
            @item.FirstName
        </td>
        <td>
            @item.LastName
        </td>
        <td>
            @Html.DisplayTextFor(_ => item.Address).ToString()
        </td>
        <td>
            @Html.DisplayTextFor(_ => item.Phone).ToString()
        </td>
        <td>
            @item.ServiceAreas
        </td>
    </tr>
}

</table>


